{
  "name": "@ai-commit/cli",
  "version": "0.1.0",
  "description": "AI-powered Git commit automation CLI tool",
  "main": "dist/index.js",
  "bin": {
    "ai-commit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "automation",
    "cli"
  ],
  "author": "Claude Sonnet 4.5",
  "license": "MIT",
  "dependencies": {
    "@ai-commit/shared": "^0.1.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "handlebars": "^4.7.8",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sigongjoa/ai_commit.git",
    "directory": "packages/cli"
  }
}
